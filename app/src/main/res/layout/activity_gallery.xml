                                    android:id="@+id/textView23"
                                    android:layout_marginLeft="7dp"
                                    android:layout_marginTop="4dp"
                                    android:textSize="13sp"
                                    android:textColor="@color/etLabelTextColor" />

                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:id="@+id/iv114"
